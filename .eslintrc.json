{
    "parser":"babel-eslint",
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes":[
            "error",
            "single",
            {
                "allowTemplateLiterals":true
            }
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
